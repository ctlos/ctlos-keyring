post_install() {
  pacman-key --init
  pacman-key --add /usr/share/pacman/keyrings/ctlos.gpg
  pacman-key --lsign-key A24F76A41D635F7A
  pacman-key --populate
}

post_upgrade() {
  pacman-key --init
  pacman-key --add /usr/share/pacman/keyrings/ctlos.gpg
  pacman-key --lsign-key A24F76A41D635F7A
  pacman-key --populate
}
